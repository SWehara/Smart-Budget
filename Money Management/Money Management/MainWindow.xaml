<Window x:Class="Money_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your Money Management App" Height="350" Width="400">
    <Grid Background="Gray">
        
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                
                <RowDefinition Height="*" />
                
                <RowDefinition Height="Auto" />
                
            </Grid.RowDefinitions>

            
            <TextBlock Text="Your Money Management App" FontSize="60" FontWeight="Bold" Foreground="Black" 
                       HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0" />

            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
                
                <Image x:Name="ProfileImage" Width="100" Height="100" Source="/Assets/default_profile.png" />
                <Button x:Name="UploadButton" Content="Upload Profile Picture" Click="UploadButton_Click" Margin="0,10,0,20" Width="150" />

                
                <TextBlock Text="Enter name:" Foreground="Black" Margin="0,0,0,5" />
                <TextBox x:Name="NameTextBox" Width="200" />
            </StackPanel>

            
            <Button x:Name="ProceedButton" Content="Proceed" Click="ProceedButton_Click" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Width="100" Grid.Row="2" />
        </Grid>
    </Grid>
</Window>