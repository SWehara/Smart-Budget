<Window x:Class="YourNamespace.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="450" Width="800">
    <Grid Background="LightGray">
        <!-- Title -->
        <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20" />

        <!-- Features Grid -->
        <Grid Margin="20,80,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Income -->
            <Border Background="Gray" CornerRadius="10" Margin="10" Grid.Row="0" Grid.Column="0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Income" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                   
                </StackPanel>
            </Border>

            <!-- Expenses -->
            <Border Background="Gray" CornerRadius="10" Margin="10" Grid.Row="0" Grid.Column="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Expenses" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    
                </StackPanel>
            </Border>

            <!-- Balance -->
            <Border Background="Gray" CornerRadius="10" Margin="10" Grid.Row="1" Grid.Column="0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Balance" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    
                </StackPanel>
            </Border>

            <!-- Goals -->
            <Border Background="Gray" CornerRadius="10" Margin="10" Grid.Row="1" Grid.Column="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Goals" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    
                </StackPanel>
            </Border>
        </Grid>
        <Grid>
            <!-- Left Corner -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
                <Button x:Name="SettingsButton" Content="Settings" Click="SettingsButton_Click"/>
                <Button Content="Help" Width="100" Click="HelpButton_Click"/>
            </StackPanel>

            <!-- Right Upper Corner -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20">
                <Button Content="Bill Reminders" Width="120" Margin="0,0,10,0" Click="BillRemindersButton_Click"/>
                <Button Content="Weekly Report" Width="120" Margin="0,0,10,0" Click="WeeklyReportButton_Click"/>
                <Button Content="Profile Details" Width="120" Click="ProfileDetailsButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>