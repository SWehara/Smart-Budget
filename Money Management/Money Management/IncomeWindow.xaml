<Window x:Class="Money_Management.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IncomeWindow" Height="450" Width="800" Background="Gray">
    <Grid>
        
        <Button Content="Back" Width="80" Height="30" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,10,10,0" Click="BackButton_Click"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Background="Gray" Height="300">

            <TextBlock Text="Income Source:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="IncomeSourceTextBox" FontSize="14" Margin="0,0,0,10" Height="20" Width="308"/>

            <TextBlock Text="Income Amount:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="IncomeAmountTextBox" FontSize="14" Margin="0,0,0,10" Height="20" Width="322"/>


            <Button x:Name="AddIncomeButton" Content="Add Income" Width="120" Height="30" 
                    FontSize="14" Margin="0,0,0,20" Click="AddIncomeButton_Click"/>


            <TextBlock x:Name="TotalIncomeTextBlock" Text="Total Income: Rs.0" 
                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
