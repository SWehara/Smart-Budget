<Window x:Class="Money_Management.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IncomeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!-- Input fields -->
            <TextBlock Text="Income Source:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="IncomeSourceTextBox" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Income Amount:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="IncomeAmountTextBox" FontSize="14" Margin="0,0,0,10"/>

            <!-- Add Income Button -->
            <Button x:Name="AddIncomeButton" Content="Add Income" Width="120" Height="30" FontSize="14" Margin="0,0,0,20" Click="AddIncomeButton_Click"/>

            <!-- Display Total Income -->
            <TextBlock x:Name="TotalIncomeTextBlock" Text="Total Income: Rs.0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>