<Window x:Class="Money_Management.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="450" Width="750" WindowStartupLocation="CenterScreen"
        Title="Smart Goal Manager" ResizeMode="CanResize">
    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="/Views/308d43a52783b8313d992c4418432042.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Grid Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Semi-transparent overlay -->
        <Rectangle Grid.RowSpan="2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Views/308d43a52783b8313d992c4418432042.jpg"/>
            </Rectangle.Fill>
        </Rectangle>

        <!-- App Title -->
        <TextBlock Grid.Row="0" Text="Smart Goal Manager"
                   FontSize="36" FontWeight="SemiBold"
                   Foreground="White" HorizontalAlignment="Center"
                   Margin="0,30,0,10"/>

        <!-- Center Card -->
        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#F0F0F0" CornerRadius="20" Padding="30"
                Width="300" Effect="{DynamicResource DropShadowEffect}">
            <StackPanel>
                <!-- Profile Image -->
                <Border Width="100" Height="100" CornerRadius="50" Background="#DDDDDD" HorizontalAlignment="Center">
                    <Image x:Name="UserProfileImage1" Stretch="UniformToFill" Visibility="Collapsed" ClipToBounds="True" />
                </Border>

                <!-- Upload Button -->
                <Button x:Name="UploadButton1" Content="Upload Profile Picture" Click="UploadButton_Click"
                        Style="{StaticResource ModernButtonStyle}" Margin="0,20,0,10"/>

                <!-- Name Input -->
                <TextBlock Text="Name" Margin="0,10,0,5" Foreground="Black"/>
                <TextBox x:Name="NameTextBox1" Height="30" Style="{StaticResource ModernTextBoxStyle}"/>

                <!-- Password Input -->
                <TextBlock Text="Password" Margin="0,15,0,5" Foreground="Black"/>
                <PasswordBox x:Name="PasswordBox1" Height="30"/>

                <!-- Proceed Button -->
                <Button x:Name="ProceedButton1" Content="Proceed" Click="ProceedButton1_Click"
                        Style="{StaticResource ModernButtonStyle}" Margin="0,25,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
