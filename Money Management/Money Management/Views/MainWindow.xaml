<Window x:Class="Money_Management.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Smart Budget"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1E1E2F">

    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Views/image.png" Stretch="Fill"/>
        </Grid.Background>

        
        <TextBlock Text="My Smart Budget"
                   FontSize="48"
                   FontWeight="Bold"
                   FontFamily="Segoe UI"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,60,0,0"/>

        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0" Width="360">
            <TextBlock Text="Welcome !" FontSize="26" FontWeight="Bold"
                       Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <Border Background="#1E1E2F" Padding="30" CornerRadius="12" Width="360">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Name" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox1"
                             Height="35" FontSize="14"
                             Background="#2C2C3E" Foreground="White"
                             BorderBrush="#4CAF50" BorderThickness="1"
                             Margin="0,0,0,15" Padding="8"/>

                    <TextBlock Text="Password" Foreground="White" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox1"
                                 Height="35" FontSize="14"
                                 Background="#2C2C3E" Foreground="White"
                                 BorderBrush="#4CAF50" BorderThickness="1"
                                 Margin="0,0,0,15" Padding="8"/>

                    <Button x:Name="ProceedButton1"
                            Content="Proceed"
                            Click="ProceedButton1_Click"
                            Background="#4CAF50" Foreground="White"
                            FontWeight="SemiBold" FontSize="14"
                            Height="38" Margin="0,10,0,0" BorderThickness="0"/>

                    <TextBlock HorizontalAlignment="Center" Margin="0,18,0,0" FontSize="13" Foreground="White">
                        Not registered?
                        <Hyperlink Click="OpenRegisterWindow_Click" Foreground="#4CAF50">Register here</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
