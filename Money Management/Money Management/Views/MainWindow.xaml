<Window x:Class="Money_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your Money Management App" Height="350" Width="400">
    <Grid Background="Gray">

        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="D:\Downloads\Project File\application-development-ca1-SWehara\Money Management\Money Management\Images\Mainwindow.jpg"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

                <RowDefinition Height="*" />

                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>


            <TextBlock Text="Your Money Management App" FontSize="60" FontWeight="Bold" Foreground="Black" 
                       HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0" />


            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Height="234" Width="244" Margin="0,72,0,0" Grid.RowSpan="2" Grid.Row="1">
                <Border Width="100" Height="100" >

                    <Border>

                        <Image x:Name="ProfileImage"  />
                    </Border>
                </Border>
                <Button x:Name="UploadButton" Content="Upload Profile Picture" Click="UploadButton_Click" Width="154" RenderTransformOrigin="0.495,-1.501" Height="26" />


                <TextBlock Text="Enter your name:" Foreground="Black" Margin="0,25,0,5" />
                <TextBox x:Name="NameTextBox" Width="201" Height="25" />
            </StackPanel>


            <Button x:Name="ProceedButton" Content="Proceed" Click="ProceedButton_Click" 
                    HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="20,70,10,10" Width="110" Grid.Row="1" Height="30" Grid.RowSpan="2" Background="DarkGray" BorderThickness="5" BorderBrush="Black"/>
        </Grid>
    </Grid>
</Window>