<Window x:Class="Money_Management.Views.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Income" Height="400" Width="500" Background="Gray">

    <Grid Margin="20">
        <!-- Back Button -->
        <Button Content="Back" Width="80" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="0,0,0,0" Click="BackButton_Click" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Current Month Income Display -->
            <TextBlock Text="Current Month Income:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <TextBlock x:Name="CurrentIncomeTextBlock" Text="Rs. 0" FontSize="20" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Set/Update Income -->
            <TextBlock Text="Enter Monthly Income:" FontSize="16" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBox x:Name="IncomeAmountTextBox" Width="200" FontSize="14" Height="30" Margin="0,0,0,20"/>

            <!-- Income Source ComboBox -->
            <TextBlock Text="Select Income Source:" FontSize="16" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <ComboBox x:Name="IncomeSourceComboBox" Width="200" FontSize="14" Margin="0,0,0,20"/>

            <!-- Set Income Button -->
            <Button x:Name="SetIncomeButton" Content="Set / Update Income" Width="200" Height="40"
                    FontSize="16" Click="SetIncomeButton_Click"/>

            <!-- Message Text -->
            <TextBlock x:Name="MessageTextBlock" Text="" FontSize="14" HorizontalAlignment="Center" Foreground="LightGreen" Margin="0,20,0,0"/>

            <!-- DataGrid to display income entries -->
            <DataGrid x:Name="IncomeDataGrid" AutoGenerateColumns="True" Margin="0,20,0,0" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
