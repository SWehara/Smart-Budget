<Window x:Class="Money_Management.Views.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="IncomeWindow" Height="600" Width="800" Background="Gray">

    <Grid Margin="20">
        <!-- Back Button -->
        <Button Content="Back" Width="80" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="0,0,0,0" Click="BackButton_Click" />

        <!-- Form Layout -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">

            <!-- Source -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="🏷️ Source:" FontSize="16" Width="100"/>
                <ComboBox x:Name="IncomeSourceComboBox" Width="200" FontSize="14" />
                <Button Content="+" Width="30" Height="25" Margin="10,0,0,0" Click="AddSourceButton_Click"/>
            </StackPanel>

            <!-- Amount -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="💰 Amount:" FontSize="16" Width="100"/>
                <TextBox x:Name="IncomeAmountTextBox" Width="200" FontSize="14" Height="25"/>
            </StackPanel>

            <!-- Date -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="📅 Date:" FontSize="16" Width="100"/>
                <DatePicker x:Name="IncomeDatePicker" SelectedDate="{x:Static sys:DateTime.Now}" Width="200"/>
            </StackPanel>

            <!-- Add Button -->
            <Button x:Name="AddIncomeButton" Content="Add Income" Width="120" Height="30"
                    FontSize="14" Margin="0,20,0,10" Click="AddIncomeButton_Click"/>

            <!-- Total Display -->
            <TextBlock x:Name="TotalIncomeTextBlock" Text="Total Income: Rs.0"
                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>

            <!-- DataGrid -->
            <DataGrid x:Name="IncomeDataGrid" Height="200" Width="440" Margin="0,10"
                      AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="📅 Date" Binding="{Binding Date}" Width="120"/>
                    <DataGridTextColumn Header="🏷️ Source" Binding="{Binding Source}" Width="200"/>
                    <DataGridTextColumn Header="💰 Amount" Binding="{Binding Amount}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Update/Delete Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="UpdateButton" Content="Update" Width="80" Height="30" Click="UpdateButton_Click" Margin="10,10"/>
                <Button x:Name="DeleteButton" Content="Delete" Width="80" Height="30" Click="DeleteButton_Click" Margin="10,10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

