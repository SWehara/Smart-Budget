<Window x:Class="Money_Management.Views.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Income" Height="550" Width="700"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="← Back" Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Current Month Income:" FontSize="16" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,10"/>
                <TextBlock x:Name="CurrentIncomeTextBlock" Text="Rs. 0" FontSize="24" FontWeight="Bold" 
                           Foreground="#4CAF50" Margin="0,0,0,20"/>

                <TextBlock Text="Enter Monthly Income:" FontSize="14" Foreground="White"/>
                <TextBox x:Name="IncomeAmountTextBox" Width="200" Height="40"/>

                <TextBlock Text="Select Income Source:" FontSize="14" Foreground="White"/>
                <ComboBox x:Name="IncomeSourceComboBox" Width="200"/>

                <Button x:Name="SetIncomeButton" Content="Update Income" Width="200" Height="40"
                        Click="SetIncomeButton_Click"/>

                <TextBlock x:Name="MessageTextBlock" Text="" FontSize="14" HorizontalAlignment="Center"
                           Foreground="LightGreen" Margin="0,10,0,0"/>
            </StackPanel>

            <DataGrid x:Name="IncomeDataGrid" Grid.Column="1"
                      AutoGenerateColumns="False"
                      Background="White" Foreground="Black"
                      BorderThickness="0" Margin="10"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      ColumnHeaderHeight="30" RowHeight="48">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date and Time" Binding="{Binding Date}" Width="*" />
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*" />
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" />

                    <DataGridTemplateColumn Header="Edit" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏" Width="40" Height="35" Click="EditButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Delete" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑" Width="40" Height="35" Click="DeleteButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>

           