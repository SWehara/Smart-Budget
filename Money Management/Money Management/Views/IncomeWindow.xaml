<Window x:Class="Money_Management.Views.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Income" Height="600" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="← Back"
                Style="{StaticResource BackButtonStyle}"
                Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Current Income:" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                <TextBlock x:Name="CurrentIncomeTextBlock" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,20"/>

                <TextBlock Text="Income Amount:" Foreground="White" Margin="0,5,0,3" FontSize="16"/>
                <TextBox x:Name="IncomeAmountTextBox" Width="250" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Source:" Foreground="White" Margin="0,5,0,3" FontSize="16" />
                <ComboBox x:Name="IncomeSourceComboBox" Width="250" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Notes:" Foreground="White" Margin="0,5,0,3" FontSize="16"/>
                <TextBox x:Name="IncomeNotesTextBox" Width="250" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <Button Content="Add / Update Income" Width="250" Height="35" Click="SetIncomeButton_Click"/>
                <TextBlock x:Name="MessageTextBlock" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            
            <StackPanel Grid.Column="1" Margin="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <ComboBox x:Name="MonthComboBox" Width="100" Margin="0,0,10,0" SelectionChanged="Filter_Changed"/>
                    <ComboBox x:Name="YearComboBox" Width="100" SelectionChanged="Filter_Changed"/>
                </StackPanel>

                <DataGrid x:Name="IncomeDataGrid" AutoGenerateColumns="False" Height="430"
                          Background="White" Foreground="Black" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*" />
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" />
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" />
                        <DataGridTemplateColumn Header="Edit" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✏" Click="EditButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Delete" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑" Click="DeleteButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
