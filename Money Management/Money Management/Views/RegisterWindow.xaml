<Window x:Class="Money_Management.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Username:" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameBox" Height="30"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Register" Click="RegisterButton_Click" Margin="0,20,0,0" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
