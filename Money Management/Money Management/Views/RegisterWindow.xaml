<Window x:Class="Money_Management.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="320" Width="420" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI">
    <Window.Background>
        <ImageBrush ImageSource="/Views/image.png"/>
    </Window.Background>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="329*"/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="30,0,0,0">

            <TextBlock Text="Create Account" FontSize="24" FontWeight="Bold" 
                       Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,10,20"/>

            <TextBlock Text="Username:" Foreground="White" Margin="0,5,0,15"/>
            <TextBox x:Name="UsernameBox" Height="35" FontSize="14" Width="300"
                     BorderBrush="#4CAF50" BorderThickness="1" Padding="8"/>

            <TextBlock Text="Password:" Foreground="White" Margin="0,10,100,15"/>
            <PasswordBox x:Name="PasswordBox" Height="35" FontSize="14" 
                         BorderBrush="#4CAF50" BorderThickness="1" Padding="8"/>

            <Button Content="Register"
                    Click="RegisterButton_Click"
                    Background="#4CAF50" Foreground="White"
                    Height="40" Margin="0,20,0,50" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand"/>

            <TextBlock x:Name="StatusTextBlock" Text="" FontSize="12" 
                       Foreground="LightGreen" Margin="0,15,0,0" 
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
