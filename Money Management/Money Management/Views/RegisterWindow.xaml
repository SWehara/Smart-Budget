<Window x:Class="Money_Management.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="320" Width="420" WindowStartupLocation="CenterScreen"
        Background="#1E1E2F" FontFamily="Segoe UI">

    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Create Account" FontSize="24" FontWeight="Bold" 
                       Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Username:" Foreground="White" Margin="0,5,0,2"/>
            <TextBox x:Name="UsernameBox" Height="35" FontSize="14" 
                     BorderBrush="#4CAF50" BorderThickness="1" Padding="8"/>

            <TextBlock Text="Password:" Foreground="White" Margin="0,10,0,2"/>
            <PasswordBox x:Name="PasswordBox" Height="35" FontSize="14" 
                         BorderBrush="#4CAF50" BorderThickness="1" Padding="8"/>

            <Button Content="Register"
                    Click="RegisterButton_Click"
                    Background="#4CAF50" Foreground="White"
                    Height="40" Margin="0,20,0,0" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand"/>

            <TextBlock x:Name="StatusTextBlock" Text="" FontSize="12" 
                       Foreground="LightGreen" Margin="0,15,0,0" 
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
