<Window x:Class="Money_Management.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Report" Height="600" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="← Back" Width="100" Height="35"
                HorizontalAlignment="Left" Click="BackButton_Click"
                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                BorderThickness="0" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <ComboBox x:Name="MonthComboBox" Width="120" Margin="10" SelectionChanged="Filter_Changed"/>
            <ComboBox x:Name="YearComboBox" Width="100" Margin="10" SelectionChanged="Filter_Changed"/>
            <Button Content="Export to PDF" Width="200" Height="30" Click="ExportToPDF_Click" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="10" BorderThickness="0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Border Background="#4CAF50" CornerRadius="10" Padding="20" Margin="10" Height="150">
                <StackPanel>
                    <TextBlock Text="Total Income" Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="IncomeTextBlock" Text="Rs. 0.00" FontSize="20" Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#F44336" CornerRadius="10" Padding="20" Margin="10" Height="150">
                <StackPanel>
                    <TextBlock Text="Total Expenses" Foreground="White" FontSize="16" FontWeight="Bold" />
                    <TextBlock x:Name="ExpensesTextBlock" Text="Rs. 0.00" FontSize="20" Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#2196F3" CornerRadius="10" Padding="20" Margin="10" Height="150">
                <StackPanel>
                    <TextBlock Text="Remaining Balance" Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="BalanceTextBlock" Text="Rs. 0.00" FontSize="20" Foreground="White"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
