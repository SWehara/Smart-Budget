<Window x:Class="Money_Management.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Dashboard" Height="700" Width="1000">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/icon.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="DarkGray" Width="220" VerticalAlignment="Stretch">
            <Grid Background="DarkGray" Height="90">
                <Image Source="/Images/icon.png" Width="60" Height="60" Margin="74,-65,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
            <Button Content="Income" Width="200" Height="50" Margin="10,5" Click="IncomeButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Button Content="Expenses" Width="200" Height="50" Margin="10,5" Click="ExpensesButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Button Content="Balance" Width="200" Height="50" Margin="10,5" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Button Content="Goals" Width="200" Height="50" Margin="10,5" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Separator Height="40"/>
            <StackPanel VerticalAlignment="Bottom">
                <Button Content="Settings" Width="200" Height="50" Margin="10,5" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            </StackPanel>
            <Button Content="Help" Width="200" Height="50" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
        </StackPanel>

        <!-- Top Bar -->
        <Grid Grid.Row="0" Grid.Column="1" Background="LightGray" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Button Content="Bill Reminders" Grid.Column="1" Width="100" Height="40" Margin="10" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="14"/>
            <Button Content="Weekly Report" Grid.Column="2" Width="100" Height="40" Margin="10" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="14"/>
            <Image Grid.Column="3" Width="40" Height="40" Source="/Images/profile.png" Margin="10" MouseLeftButtonDown="ProfileImage_Click"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Border Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Total Income" FontWeight="Bold"/>
                        <TextBlock Text="Rs. 20,000" FontSize="16"/>
                    </StackPanel>
                </Border>
                <Border Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Total Expenses" FontWeight="Bold"/>
                        <TextBlock Text="Rs. 15,000" FontSize="16"/>
                    </StackPanel>
                </Border>
                <Border Background="WhiteSmoke" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Remaining Budget" FontWeight="Bold"/>
                        <TextBlock Text="Rs. 5,000" FontSize="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Pie Chart -->
            <TextBlock Text="Spending Breakdown" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="1"/>
            <lvc:PieChart Grid.Row="1" Name="SpendingPieChart" LegendLocation="Right" Margin="0,40,0,0">
                <lvc:PieChart.Series>
                    <lvc:PieSeries Title="Food" Values="{Binding FoodSeries}" DataLabels="True"/>
                    <lvc:PieSeries Title="Travel" Values="{Binding TravelSeries}" DataLabels="True"/>
                    <lvc:PieSeries Title="Bills" Values="{Binding BillsSeries}" DataLabels="True"/>
                    <lvc:PieSeries Title="Other" Values="{Binding OtherSeries}" DataLabels="True"/>
                </lvc:PieChart.Series>
            </lvc:PieChart>

            <!-- Goal Progress Bar -->
            <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0,20,0,0">
                <TextBlock Text="Goal Progress" FontWeight="Bold" FontSize="16" Margin="0,10,0,5"/>
                <ProgressBar Width="400" Height="25" Value="70" Maximum="100"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Add Income" Width="120" Height="40" Margin="10"/>
                <Button Content="Add Expense" Width="120" Height="40" Margin="10"/>
                <Button Content="Set Budget" Width="120" Height="40" Margin="10"/>
                <Button Content="View Reports" Width="120" Height="40" Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
