<Window x:Class="Money_Management.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        Height="700" Width="1000"
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="DashboardButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="10,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#2C2C3E" Width="220">
            <Grid Height="90">
                <Image Source="/Images/icon.png" Width="60" Height="60" Margin="80,10,0,0" HorizontalAlignment="Left"/>
            </Grid>
            <StackPanel Margin="0,20,0,0">
                <Button Content="Income" Style="{StaticResource DashboardButtonStyle}" Click="IncomeButton_Click" Height="50"/>
                <Button Content="Budget" Style="{StaticResource DashboardButtonStyle}" Click="BudgetButton_Click" Height="50"/>
                <Button Content="Expenses" Style="{StaticResource DashboardButtonStyle}" Click="ExpensesButton_Click" Height="50"/>
                <Button Content="Goals" Style="{StaticResource DashboardButtonStyle}" Click="GoalsButton_Click" Height="50"/>
            </StackPanel>

            <Separator Margin="10,30,10,10"/>
            <Button Content="Settings" Style="{StaticResource DashboardButtonStyle}" Click="SettingsButton_Click" Height="50"/>
            <Button Content="Help" Style="{StaticResource DashboardButtonStyle}" Click="HelpButton_Click" Height="50"/>
        </StackPanel>

        <!-- Top Navigation -->
        <Grid Grid.Row="0" Grid.Column="1" Background="#303040" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <Button Content="Month Report"
                    Grid.Column="1"
                    Style="{StaticResource DashboardButtonStyle}"
                    Height="40" Margin="10"
                    Click="MonthReportButton_Click"/>

            <Button Content="Profile"
                    Grid.Column="2"
                    Style="{StaticResource DashboardButtonStyle}"
                    Height="40" Margin="10"
                    Click="ProfileButton_Click"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.Background>
                <ImageBrush ImageSource="/Views/dashboard window.jpeg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20,20,20,10">
                <TextBlock x:Name="GreetingTextBlock"
                           Text="Welcome back, User"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
