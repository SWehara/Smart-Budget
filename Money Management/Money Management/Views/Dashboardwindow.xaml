<Window x:Class="Money_Management.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <StackPanel Grid.Row="1" Grid.Column="0" Background="DarkGray" Width="220" VerticalAlignment="Stretch">
            <Grid Background="DarkGray" Height="90">
                <Image Source="/Images/icon.png" Width="60" Height="60" Margin="74,-65,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
            <Button Content="Add Income" Width="200" Height="50" Margin="10,5" Click="IncomeButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Button Content="Add Expenses" Width="200" Height="50" Margin="10,5" Click="ExpensesButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Button Content="Add Budget" Width="200" Height="50" Margin="10,5" Click="BudgetButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>

            <Button Content="Goals" Width="200" Height="50" Margin="10,5" Click="GoalsButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            <Separator Height="40"/>
            <StackPanel VerticalAlignment="Bottom">
                <Button Content="Settings" Width="200" Height="50" Margin="10,5" Click="SettingsButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
            </StackPanel>
            <Button Content="Help" Width="200" Height="50" Click="HelpButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="16"/>
        </StackPanel>

        
        <Grid Grid.Row="0" Grid.Column="1" Background="LightGray" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Button Content="Month Report" Grid.Column="1" Width="100" Height="40" Margin="10" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="14"/>
            <Button Content="Profile" Grid.Column="2" Width="120" Height="40" Margin="10" Background="Transparent" BorderThickness="1" BorderBrush="Black" Foreground="Black" FontSize="14"/>
            <Image Grid.Column="3" Width="40" Height="40" Source="/Images/profile.png" Margin="10" MouseLeftButtonDown="ProfileImage_Click"/>
        </Grid>

        
        <Grid Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.Background>
                <ImageBrush ImageSource="/Views/dashboard window.jpeg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            

        </Grid>
    </Grid>
</Window>
