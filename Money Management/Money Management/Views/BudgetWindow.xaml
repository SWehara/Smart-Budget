<Window x:Class="Money_Management.Views.BudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget" Height="600" Width="900"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Content="← Back" Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click" />

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="Monthly Budget Planner" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,20"/>

                <!-- Monthly Income -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Monthly Income (Rs):" FontSize="16" Width="200"/>
                    <TextBox x:Name="IncomeInput" Width="200" Margin="10,0"/>
                    <Button Content="Set Income" Width="120" Click="SetIncome_Click"/>
                </StackPanel>

                <!-- Budget Categories -->
                <GroupBox Header="Budget Categories" Foreground="White" Margin="0,0,0,20">
                    <StackPanel>
                        <DataGrid x:Name="CategoryDataGrid" ItemsSource="{Binding Categories}" AutoGenerateColumns="False"
                                  Height="200" CanUserAddRows="False"
                                  Background="White" Foreground="Black" Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="Limit (Rs.)" Binding="{Binding Limit}" Width="*" />
                                <DataGridTextColumn Header="Spent (Rs.)" Binding="{Binding Spent}" Width="*" />
                                <DataGridTextColumn Header="Remaining (Rs.)" Binding="{Binding Remaining}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <!-- Removed duplicate IncomeInput TextBox -->
                            <Button Content="+ Add Category" Width="130" Click="AddCategory_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Financial Goals -->
                <GroupBox Header="Financial Goals" Foreground="White" Margin="0,0,0,20">
                    <ItemsControl ItemsSource="{Binding Goals}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,5">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <ProgressBar Value="{Binding Progress}" Height="20" Margin="0,5,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <!-- Pie Chart Placeholder -->
                <GroupBox Header="Spending Distribution" Foreground="White" Margin="0,0,0,20">
                    <Grid Height="200">
                        <TextBlock Text="[Pie Chart Visualization Here]"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"/>
                    </Grid>
                </GroupBox>

                <!-- Remaining Budget Summary -->
                <TextBlock x:Name="RemainingSummary" FontSize="18" FontWeight="Bold" Foreground="LightGreen" Margin="0,0,0,10"/>

                <!-- Alerts -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="⚠️ Eating Out: 85% of budget used" Foreground="OrangeRed"/>
                    <TextBlock Text="❗ Transport: Over budget!" Foreground="Red"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
