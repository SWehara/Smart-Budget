<Window x:Class="Money_Management.Views.BudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget" Height="600" Width="900"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Button Content="← Back" Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click" />

       
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <TextBlock Text="Monthly Budget Planner" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"
                       Margin="0,0,0,20" Grid.Row="0"/>

           
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Grid.Row="1">
                <TextBlock Text="Monthly Income (Rs):" FontSize="16" Width="200"/>
                <TextBox x:Name="IncomeInput" Width="200" Margin="10,0"/>
                <Button Content="Set Income" Width="120" Click="SetIncome_Click"/>
            </StackPanel>

            
            <GroupBox Header="Budget Categories" Foreground="White" Margin="0,0,0,20" Grid.Row="2">
                <StackPanel>
                    <DataGrid x:Name="CategoryDataGrid" ItemsSource="{Binding Categories}" AutoGenerateColumns="False"
                              Height="150" CanUserAddRows="False"
                              Background="White" Foreground="Black" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Limit (Rs.)" Binding="{Binding Limit}" Width="*" />
                            <DataGridTextColumn Header="Spent (Rs.)" Binding="{Binding Spent}" Width="*" />
                            <DataGridTextColumn Header="Remaining (Rs.)" Binding="{Binding Remaining}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="+ Add Category" Width="130" Click="AddCategory_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            
            <StackPanel Grid.Row="3">
                <GroupBox Header="Financial Goals" Foreground="White" Margin="0,0,0,20">
                    <ItemsControl ItemsSource="{Binding Goals}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,5">
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                    <ProgressBar Value="{Binding Progress}" Height="20" Margin="0,5,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <GroupBox Header="Spending Distribution" Foreground="White" Margin="0,0,0,20">
                    <Grid Height="150">
                        <TextBlock Text="[Pie Chart Visualization Here]"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"/>
                    </Grid>
                </GroupBox>
            </StackPanel>

            
            <StackPanel Grid.Row="4">
                <TextBlock x:Name="RemainingSummary" FontSize="18" FontWeight="Bold" Foreground="LightGreen" Margin="0,0,0,10"/>
                <TextBlock Text="⚠️ Eating Out: 85% of budget used" Foreground="OrangeRed"/>
                <TextBlock Text="❗ Transport: Over budget!" Foreground="Red"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
