<Window x:Class="Money_Management.Views.ExpensesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expenses Window" Height="450" Width="800" Background="Gray">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="Gray" Width="500" Height="300">
            <TextBlock Text="Expenses Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            
            <TextBox x:Name="ExpenseNameTextBox" Width="200" Height="30" Text="Enter Expense Name" Foreground="Gray" Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <TextBox x:Name="ExpenseAmountTextBox" Width="200" Height="30" Text="Enter Expense Amount" Foreground="Gray" Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <Button x:Name="AddExpenseButton" Content="Add Expense" Width="100" Height="30" Click="AddExpenseButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="100" Height="30" Margin="0,10,0,0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>