<Window x:Class="Money_Management.Views.ExpensesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Expenses" Height="600" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="← Back"
                Style="{StaticResource BackButtonStyle}"
                Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Total Expenses This Month:" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="TotalExpenseTextBlock" FontSize="24" Foreground= "#4CAF50" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Category:" Foreground="White" Margin="0,5,0,3"/>
                <ComboBox x:Name="CategoryComboBox" Width="250" Height="30" Margin="0,0,0,10">
                    <ComboBoxItem Content="Food"/>
                    <ComboBoxItem Content="Education"/>
                    <ComboBoxItem Content="Transport"/>
                    <ComboBoxItem Content="Utilities"/>
                    <ComboBoxItem Content="Entertainment"/>
                    <ComboBoxItem Content="Health"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <TextBlock Text="Amount:" Foreground="White" Margin="0,5,0,3"/>
                <TextBox x:Name="ExpenseAmountTextBox" Width="250" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Date:" Foreground="White" Margin="0,5,0,3"/>
                <DatePicker x:Name="ExpenseDatePicker" Width="250" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Notes:" Foreground="White" Margin="0,5,0,3"/>
                <TextBox x:Name="NotesTextBox" Width="250" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <Button Content="Add Expense" Width="250" Height="35" Click="AddExpenseButton_Click"/>
                <TextBlock x:Name="ExpenseMessageTextBlock" Foreground="LightGreen" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

           
            <StackPanel Grid.Column="1" Margin="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <ComboBox x:Name="MonthComboBox" Width="100" Margin="0,0,10,0" SelectionChanged="FilterChanged"/>
                    <ComboBox x:Name="YearComboBox" Width="100" SelectionChanged="FilterChanged"/>
                </StackPanel>

                <DataGrid x:Name="ExpensesDataGrid" AutoGenerateColumns="False" Height="430"
                          Background="White" Foreground="Black" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" />
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" />
                        <DataGridTemplateColumn Header="Edit" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✏" Click="EditExpense_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Delete" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑" Click="DeleteExpense_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
