<Window x:Class="Money_Management.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" Height="500" Width="600" WindowStartupLocation="CenterScreen" Background="#1E1E2F">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Button Content="← Back"
                Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Background="#4CAF50"
                BorderBrush="Transparent"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Cursor="Hand" />

        
        <StackPanel Grid.Row="1" Margin="0,20,0,20" HorizontalAlignment="Center">
            <TextBlock Text="User Profile" FontSize="50" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="White"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Username:" Width="120" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                <TextBox x:Name="UsernameBox" IsReadOnly="True" Width="300" Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Full Name:" Width="120" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                <TextBox x:Name="FullNameBox" Width="300" Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Email:" Width="120" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                <TextBox x:Name="EmailBox" Width="300" Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Phone:" Width="120" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                <TextBox x:Name="PhoneBox" Width="300" Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Date Registered:" Width="120" VerticalAlignment="Center" FontSize="15" Foreground="White"/>
                <TextBox x:Name="DateRegisteredBox" IsReadOnly="True" Width="300" Background="White"/>
            </StackPanel>
        </StackPanel>

        
        <Button Content="Save Changes" Grid.Row="1" Width="150" Height="35" HorizontalAlignment="Center" Click="SaveButton_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="130,296,0,78"/>
        <Button Content="Logout"
        Width="100" Height="35"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,10,10"
        Click="LogoutButton_Click"
        Background="#f44336"
        Foreground="White"
        FontWeight="Bold"
        Grid.Row="2"/>

    </Grid>
</Window>



