<Window x:Class="Money_Management.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="500" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>

               
                <DockPanel Margin="0,0,0,20">
                    <Button Content="← Back" Width="100" Height="30" Click="BackButton_Click"
                            Background="#4CAF50" Foreground="White" BorderThickness="0"
                            HorizontalAlignment="Left" />
                    <TextBlock Text="Help &amp; Getting Started" FontSize="28" FontWeight="Bold"
           Foreground="#4CAF50" HorizontalAlignment="Center"
           VerticalAlignment="Center" Margin="0,0,0,20"/>



                </DockPanel>

                
                <TextBlock Foreground="White" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,20">
                    Welcome to the Smart Goal Tracker! Here's how you can get started and make the most of your dashboard.
                </TextBlock>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Dashboard" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Navigate to Budget, Income, Expenses, and Goals." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Income" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Add or edit your income entries by amount and source." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Expenses" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Track your expenses by category and amount." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Budget" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Set monthly budgets to monitor your spending." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Goals" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Define savings goals and track progress over time." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="Need further assistance?   admin@gmail.com"
                           Foreground="LightGray" FontStyle="Italic" Margin="0,30,0,0" FontSize="12"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
