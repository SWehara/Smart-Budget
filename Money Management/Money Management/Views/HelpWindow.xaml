<Window x:Class="Money_Management.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" 
        Background="#1E1E2F" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <DockPanel Margin="0,0,0,20">
                    <Button Content="← Back" Width="100" Height="30" Click="BackButton_Click"
                            Background="#4CAF50" Foreground="White" BorderThickness="0"
                            HorizontalAlignment="Left" />
                    <TextBlock Text="Help &amp; Getting Started" FontSize="28" FontWeight="Bold"
                               Foreground="#4CAF50" HorizontalAlignment="Center"
                               VerticalAlignment="Center" Margin="0,0,0,20"/>
                </DockPanel>

                <TextBlock Foreground="White" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,20">
                    Welcome to the My Smart Budget! Below you'll find an overview of each feature in the application to help you get started.
                </TextBlock>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Dashboard" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Your main control panel. Navigate to Income, Expenses, Budget, Goals, and Reports easily." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Income" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Record your income sources, amounts, and descriptions. Filter by month/year. Supports edit and delete." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

               
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Expenses" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Add expenses with categories and notes. View/edit/delete entries. Budget categories update automatically as you spend." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Budget" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Set monthly spending limits for categories. See spent vs. remaining with automatic updates from expenses. Includes pie chart visualization." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Goals" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Define savings goals (e.g., save Rs. 5,000 for a phone)." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Reports" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Export your income, expenses, and budget summaries into PDF files. Helps in tracking and presenting your financial performance." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Settings" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="Change password, delete your account. Keep your preferences up to date." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                
                <Border Background="#2E2E3E" CornerRadius="10" Padding="15" Margin="0,10,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#4CAF50" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Profile" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50"/>
                            <TextBlock Text="View and update your full name, email, and phone number. Check registration date or log out from your account." TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
