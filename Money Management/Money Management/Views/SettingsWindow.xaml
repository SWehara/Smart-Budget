<Window x:Class="Money_Management.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Margin="30">
       
        <Button Content="← Back"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="100" Height="35"
                Click="BackButton_Click"
                FontSize="14" Foreground="White" Background="#4CAF50"
                BorderBrush="White" BorderThickness="1" Padding="5" Cursor="Hand"/>

        <TextBlock Text="Settings" FontSize="28" FontWeight="Bold"
                   Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Change Password" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,50" HorizontalAlignment="Center"/>

            <TextBlock Text="Old Password" Foreground="White" FontSize="12"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,20" Height="25"/>

            <TextBlock Text="New Password" Foreground="White" FontSize="12"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,20" Height="25"/>

            <TextBlock Text="Confirm New Password" Foreground="White" FontSize="12"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" Height="25"/>

            <Button Content="Save Settings" Width="130" Click="SaveSettingsButton_Click" Height="50"/>
            <TextBlock x:Name="StatusTextBlock" FontSize="12" Foreground="LightGreen" Margin="0,15,0,0" />
        </StackPanel>

        
        <Button Content="Delete My Account"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Width="180" Height="35"
                Background="DarkRed" Foreground="White"
                Click="DeleteAccountButton_Click"/>
    </Grid>
</Window>
