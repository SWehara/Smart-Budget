<Window x:Class="Money_Management.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Foreground="#4CAF50" Grid.Row="0" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300">

            
            <TextBlock Text="Preferred Currency:" Foreground="White"/>
            <ComboBox x:Name="CurrencyComboBox" Width="200" Margin="0,5,0,15">
                <ComboBoxItem Content="LKR"/>
                <ComboBoxItem Content="USD"/>
                <ComboBoxItem Content="EUR"/>
            </ComboBox>

            
            <TextBlock Text="Profile Picture:" Foreground="White"/>
            <Button x:Name="UploadButton" Content="Upload Picture" Width="200" Click="UploadButton_Click" Margin="0,5,0,15"/>

            
            <CheckBox x:Name="DarkModeCheckBox" Content="Enable Dark Mode" Foreground="White" Margin="0,0,0,20"/>

           
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Save Settings" Width="130" Click="SaveSettingsButton_Click"/>
                <Button Content="← Back" Width="100" Margin="10,0,0,0" Click="BackButton_Click"/>
            </StackPanel>

            
            <TextBlock x:Name="StatusTextBlock" FontSize="12" Foreground="LightGreen" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
