<Window x:Class="Money_Management.Views.GoalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Goals" Height="600" Width="800"
        Background="#1E1E2F" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="← Back" Width="100" Height="35"
                HorizontalAlignment="Left"
                Click="BackButton_Click" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Add New Goal" FontSize="16" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,10"/>

                <TextBlock Text="Goal Name:" Foreground="White"/>
                <TextBox x:Name="GoalNameTextBox" Width="200"/>

                <TextBlock Text="Target Amount:" Foreground="White"/>
                <TextBox x:Name="TargetAmountTextBox" Width="200"/>

                <TextBlock Text="Due Date:" Foreground="White"/>
                <DatePicker x:Name="DueDatePicker" Width="200"/>

                <Button Content="Create Goal" Width="200" Click="CreateGoalButton_Click"/>

                <TextBlock x:Name="GoalMessageTextBlock" Text="" FontSize="14" HorizontalAlignment="Center"
                           Foreground="LightGreen" Margin="0,10,0,0"/>
            </StackPanel>

            <DataGrid x:Name="GoalsDataGrid" Grid.Column="1"
                      AutoGenerateColumns="False"
                      Background="White" Foreground="Black"
                      BorderThickness="0" Margin="10"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      ColumnHeaderHeight="30" RowHeight="48">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Goal" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*" />
                    <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate}" Width="*" />
                    <DataGridTextColumn Header="Saved" Binding="{Binding Progress}" Width="*" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />

                    <DataGridTemplateColumn Header="Add Savings" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Width="60" Margin="0,0,5,0" Tag="{Binding Name}"/>
                                    <Button Content="➕" Width="40" Click="AddProgressButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Edit" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏" Width="40" Click="EditGoalButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Delete" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑" Width="40" Click="DeleteGoalButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>

